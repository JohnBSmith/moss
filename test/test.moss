
use sys: cmd

small = 0
medium = 1
full = 2

function test_extern(path,extra)
   return fn test|name|
      print(name)
      cmd(path,extra+[name])
   end
end

function test_self()
   return fn test|name|
      print(name)
      load(name)
   end
end

function tests(scale,path,extra=[])
   print("\nStarting tests: ",path)
   if path=="self"
      test = test_self()
   else
      test = test_extern(path,extra)
   end

   test("test-basic")
   test("test-object-system")
   test("test-format")
   test("test-json")
   test("test-import")
   test("test-sudoku")
   test("test-parser")
   test("test-la")
   test("test-generators")
   test("test-exceptions")
   test("test-regex")
   
   if scale>small
      test("test-cf")
      test("test-la-inv")
      test("test-long")
   end

   if scale>medium
      # too slow in debug mode
      test("test-la-inv-complex")
      test("test-nt")
   end
end

tests(medium,"../target/debug/moss")
tests(full,"../target/release/moss")
tests(full,"self")
tests(full,"moss")
tests(small,"valgrind",["../target/debug/moss"])

